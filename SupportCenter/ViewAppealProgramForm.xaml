<Window x:Class="SupportCenter.ViewAppealProgramForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SupportCenter"
        mc:Ignorable="d"
        Title="ViewAppealProgramForm" Height="457" Width="1031" Loaded="Window_Loaded">
    <Window.Resources>
        <ResourceDictionary Source="/Styles/Style.xaml"></ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Image Source="/Image/Main.jpg" StretchDirection="UpOnly" Stretch="Fill"/>
        <Grid Background="#EF3C3636" Opacity="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock HorizontalAlignment="Left" Margin="27,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Foreground="White" FontFamily="Yu Gothic UI Semibold" Text="Заявка на установку программы: №">
                <TextBlock.Effect>
                    <DropShadowEffect/>
                </TextBlock.Effect>
            </TextBlock>
            <Button x:Name="acceptRedactButton" Style="{StaticResource ButtonMenuStyle}" HorizontalAlignment="Left" Margin="27,368,0,0" VerticalAlignment="Top" Height="26" Width="397" Cursor="Hand">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Записать"/>
            </Button>
            <TextBox x:Name="nameProgram" Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Left" Margin="180,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="244" Height="24" FontSize="16" FontFamily="Yu Gothic UI Semibold">
                <TextBox.Effect>
                    <DropShadowEffect/>
                </TextBox.Effect>
            </TextBox>
            <TextBlock HorizontalAlignment="Left" Margin="55,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Foreground="White" FontFamily="Yu Gothic UI Semibold" Text="Требуемое ПО:">
                <TextBlock.Effect>
                    <DropShadowEffect/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock HorizontalAlignment="Left" Margin="35,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Foreground="White" FontFamily="Yu Gothic UI Semibold" Text="Имя компьютера:">
                <TextBlock.Effect>
                    <DropShadowEffect/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBox x:Name="namePc" Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Left" Margin="180,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="244" Height="24" FontSize="16" FontFamily="Yu Gothic UI Semibold">
                <TextBox.Effect>
                    <DropShadowEffect/>
                </TextBox.Effect>
            </TextBox>
            <TextBlock HorizontalAlignment="Left" Margin="95,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Foreground="White" FontFamily="Yu Gothic UI Semibold" Text="ИП адрес:">
                <TextBlock.Effect>
                    <DropShadowEffect/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBox x:Name="ipPc" Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Left" Margin="180,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="244" Height="24" FontSize="16" FontFamily="Yu Gothic UI Semibold">
                <TextBox.Effect>
                    <DropShadowEffect/>
                </TextBox.Effect>
            </TextBox>
            <TextBlock HorizontalAlignment="Left" Margin="81,175,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Foreground="White" FontFamily="Yu Gothic UI Semibold" Text="Инициатор:">
                <TextBlock.Effect>
                    <DropShadowEffect/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBox x:Name="applicantProgram" Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Left" Margin="180,174,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="244" Height="24" FontSize="16" FontFamily="Yu Gothic UI Semibold">
                <TextBox.Effect>
                    <DropShadowEffect/>
                </TextBox.Effect>
            </TextBox>
            <TextBox Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Left" Margin="27,247,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="397" Height="82" FontSize="16" FontFamily="Yu Gothic UI Semibold">
                <TextBox.Effect>
                    <DropShadowEffect/>
                </TextBox.Effect>
            </TextBox>
            <TextBlock HorizontalAlignment="Left" Margin="27,221,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Foreground="White" FontFamily="Yu Gothic UI Semibold" Text="Комментарий по заявке:">
                <TextBlock.Effect>
                    <DropShadowEffect/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock x:Name="idAppeal" HorizontalAlignment="Left" Margin="304,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Foreground="White" FontFamily="Yu Gothic UI Semibold" Text="456123">
                <TextBlock.Effect>
                    <DropShadowEffect/>
                </TextBlock.Effect>
            </TextBlock>
            <TabControl x:Name="menuAppealProgram" Margin="454,50,10,47" Background="{x:Null}" BorderBrush="{x:Null}">
                <TabControl.Effect>
                    <DropShadowEffect/>
                </TabControl.Effect>
                <TabItem x:Name="responsibleTabItem" Header="Согласования" BorderBrush="{x:Null}">
                    <Grid Background="#FF3C3C3C" Margin="0,0,155,0">
                        <TextBlock HorizontalAlignment="Left" Margin="16,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Foreground="White" FontFamily="Yu Gothic UI Semibold" Text="Отдел информационной безопасности:" Width="436">
                            <TextBlock.Effect>
                                <DropShadowEffect/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock HorizontalAlignment="Left" Margin="16,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Foreground="White" FontFamily="Yu Gothic UI Semibold" Text="Отдел информационных технологий:" Width="436" IsEnabled="False">
                            <TextBlock.Effect>
                                <DropShadowEffect/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock x:Name="oibResponsible" HorizontalAlignment="Left" Margin="16,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Foreground="White" FontFamily="Yu Gothic UI Semibold" Text="Ерахтин Артем Максимович">
                            <TextBlock.Effect>
                                <DropShadowEffect/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <ComboBox x:Name="oitStatusResponsble" HorizontalAlignment="Left" Margin="16,159,0,0" VerticalAlignment="Top" Width="218" IsSynchronizedWithCurrentItem="False" Height="25" FontSize="14" SelectedIndex="0">
                            <ComboBox.Effect>
                                <DropShadowEffect/>
                            </ComboBox.Effect>
                            <ComboBoxItem Content="Не согласовано"/>
                            <ComboBoxItem Content="Согласовано"/>
                            <ComboBoxItem Content="Отказано"/>
                        </ComboBox>
                        <TextBlock x:Name="oitResponsible" HorizontalAlignment="Left" Margin="16,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Foreground="White" FontFamily="Yu Gothic UI Semibold" Text="Пасынков Сергей Андреевич">
                            <TextBlock.Effect>
                                <DropShadowEffect/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <Button x:Name="acceptOibResponsible" Style="{StaticResource ButtonMenuStyle}" HorizontalAlignment="Left" Margin="241,72,0,0" VerticalAlignment="Top" Height="25" Width="121" Cursor="Hand" Click="acceptOibResponsible_Click">
                            <Button.Effect>
                                <DropShadowEffect/>
                            </Button.Effect>
                            <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Сохранить"/>
                        </Button>
                        <Button x:Name="acceptOitResponsible" Style="{StaticResource ButtonMenuStyle}" HorizontalAlignment="Left" Margin="241,159,0,0" VerticalAlignment="Top" Height="25" Width="121" Cursor="Hand" Click="acceptOitResponsible_Click">
                            <Button.Effect>
                                <DropShadowEffect/>
                            </Button.Effect>
                            <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Сохранить"/>
                        </Button>
                        <ComboBox x:Name="oibStatusResponsble" HorizontalAlignment="Left" Margin="18,72,0,0" VerticalAlignment="Top" Width="218" IsSynchronizedWithCurrentItem="False" Height="25" FontSize="14" SelectedIndex="0">
                            <ComboBox.Effect>
                                <DropShadowEffect/>
                            </ComboBox.Effect>
                            <ComboBoxItem Content="Не согласовано"/>
                            <ComboBoxItem Content="Согласовано"/>
                            <ComboBoxItem Content="Отказано"/>
                        </ComboBox>
                    </Grid>
                </TabItem>
                <TabItem x:Name="executorTabItem" Header="Исполнитель">
                    <Grid Background="#FF3C3C3C" Margin="0,0,164,0">
                        <TextBlock HorizontalAlignment="Left" Margin="12,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Foreground="White" FontFamily="Yu Gothic UI Semibold" Text="Исполнитель Отдела технической поддержки:">
                            <TextBlock.Effect>
                                <DropShadowEffect/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock x:Name="executorProgram" HorizontalAlignment="Left" Margin="12,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Foreground="White" FontFamily="Yu Gothic UI Semibold" Text="Исполнитель не назначен:">
                            <TextBlock.Effect>
                                <DropShadowEffect/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <ComboBox x:Name="otpStatusResponsble" HorizontalAlignment="Left" Margin="12,72,0,0" VerticalAlignment="Top" Width="218" IsSynchronizedWithCurrentItem="False" Height="25" FontSize="14" SelectedIndex="0">
                            <ComboBox.Effect>
                                <DropShadowEffect/>
                            </ComboBox.Effect>
                            <ComboBoxItem Content="Не в работе"/>
                            <ComboBoxItem Content="В работе"/>
                            <ComboBoxItem Content="Выполнено"/>
                            <ComboBoxItem Content="Отменено"/>
                        </ComboBox>
                        <Button x:Name="acceptOtpResponsible" Style="{StaticResource ButtonMenuStyle}" HorizontalAlignment="Left" Margin="235,72,0,0" VerticalAlignment="Top" Height="25" Width="121" Cursor="Hand" Click="acceptOtpResponsible_Click">
                            <Button.Effect>
                                <DropShadowEffect/>
                            </Button.Effect>
                            <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Сохранить"/>
                        </Button>
                        <Button x:Name="giveAppeal" Style="{StaticResource ButtonMenuStyle}" HorizontalAlignment="Left" Margin="12,102,0,0" VerticalAlignment="Top" Height="25" Width="121" Cursor="Hand" Click="giveAppeal_Click">
                            <Button.Effect>
                                <DropShadowEffect/>
                            </Button.Effect>
                            <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Взять в работу"/>
                        </Button>
                    </Grid>
                </TabItem>
                <TabItem x:Name="chatTabItem" Header="Переписка">
                    <Grid Background="#FF3C3C3C" Margin="0,0,148,0">
                        <RichTextBox x:Name="messageRichtextbox" Margin="0,10,0,111" HorizontalAlignment="Center" Width="392">
                            <FlowDocument>

                            </FlowDocument>
                        </RichTextBox>
                        <TextBox x:Name="messageTextBlock" HorizontalAlignment="Center" Margin="0,234,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="392" RenderTransformOrigin="0.5,0.5" Height="38">
                            <TextBox.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform AngleX="-2.868"/>
                                    <RotateTransform/>
                                    <TranslateTransform X="-0.45"/>
                                </TransformGroup>
                            </TextBox.RenderTransform>
                        </TextBox>
                        <Button x:Name="sendMessageButton" Style="{StaticResource ButtonMenuStyle}" HorizontalAlignment="Center" Margin="0,280,0,0" VerticalAlignment="Top" Height="26" Width="392" Cursor="Hand" Click="sendMessageButton_Click">
                            <Button.Effect>
                                <DropShadowEffect/>
                            </Button.Effect>
                            <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Отправить"/>
                        </Button>
                        <TextBlock HorizontalAlignment="Left" Margin="10,210,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" Foreground="White" FontFamily="Yu Gothic UI Semibold" Text="Сообщение:">
                            <TextBlock.Effect>
                                <DropShadowEffect/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Grid>
                </TabItem>
                <TabItem x:Name="historyTabItem" Header="История">
                    <Grid Background="#FF3C3C3C">
                        <DataGrid x:Name="historyAppealDataGrid" AutoGenerateColumns="False" 
          CanUserAddRows="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <!-- Время -->
                                <DataGridTextColumn Header="Время" Binding="{Binding dateLog}" 
                           Width="100"/>

                                <!-- Пользователь -->
                                <DataGridTextColumn Header="Пользователь" Binding="{Binding userName}" 
                           Width="150"/>

                                <!-- Событие -->
                                <DataGridTextColumn Header="Событие" Binding="{Binding action}" 
                           Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>
            </TabControl>
            <Button x:Name="selectResponsibleSpace" Style="{StaticResource ButtonMenuStyle}" HorizontalAlignment="Left" Margin="454,14,0,0" VerticalAlignment="Top" Height="25" Width="97" Cursor="Hand" Click="selectResponsibleSpace_Click">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Согласования"/>
            </Button>
            <Button x:Name="selectExecutorSpace" Style="{StaticResource ButtonMenuStyle}" HorizontalAlignment="Left" Margin="556,14,0,0" VerticalAlignment="Top" Height="25" Width="98" Cursor="Hand" Click="selectExecutorSpace_Click">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Исполнитель"/>
            </Button>
            <Button x:Name="selectChatSpace" Style="{StaticResource ButtonMenuStyle}" HorizontalAlignment="Left" Margin="743,14,0,0" VerticalAlignment="Top" Height="25" Width="57" Cursor="Hand" Click="selectChatSpace_Click">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Чат"/>
            </Button>
            <Button x:Name="selectHistorySpace" Style="{StaticResource ButtonMenuStyle}" HorizontalAlignment="Left" Margin="659,14,0,0" VerticalAlignment="Top" Height="25" Width="79" Cursor="Hand" Click="selectHistorySpace_Click">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="История"/>
            </Button>
        </Grid>


    </Grid>
</Window>
