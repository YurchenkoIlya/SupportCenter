<Window x:Class="SupportCenter.AppealForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SupportCenter"
        mc:Ignorable="d"
        Title="Обращения" Height="716" Width="1344" Loaded="Window_Loaded">
    <Window.Resources>
        <ResourceDictionary Source="/Styles/Style.xaml"></ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Image Source="/Image/Main.jpg" StretchDirection="UpOnly" Stretch="Fill"/>
        <Grid Background="#EF3C3636" Opacity="1">
            <StackPanel Margin="0,5,0,0" Background="#C53C3636" Orientation="Horizontal" Opacity="1" HorizontalAlignment="Center" Width="1344" Height="50" VerticalAlignment="Top">
                <Button x:Name="cancelButton" Style="{StaticResource ButtonMenuStyle}" Margin="10,0,0,0" Height="50" Width="50" Cursor="Hand" Click="cancelButton_Click">
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                    <Image Height="40" Source="/Image/icons8-home-50.png" Stretch="Fill" Width="40"/>
                </Button>
                <Button x:Name="appealProgramShow" Style="{StaticResource ButtonMenuStyle}" Margin="10,0,0,0" Height="50" Width="192" Cursor="Hand" Click="appealProgramShow_Click">
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                    <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Заявки на установку программного обеспечения"/>
                </Button>
                <Button x:Name="buttonFolder" Style="{StaticResource ButtonMenuStyle}" Height="50" Margin="5,0,0,0" Width="224" Cursor="Hand" Click="buttonFolder_Click">
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                    <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Заявки на предоставления доступа к сетевым папкам"/>
                </Button>
                <Button x:Name="buttonPrinter" Style="{StaticResource ButtonMenuStyle}" Margin="5,0,0,0" Height="50" Width="191" Cursor="Hand" Click="buttonPrinter_Click">
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                    <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Заявки на настройку принтера"/>
                </Button>
            </StackPanel>
            <TabControl x:Name="workAreaControl" Margin="0,55,0,0" HorizontalAlignment="Center" Width="1344" BorderBrush="{x:Null}" Background="{x:Null}">
                <TabItem x:Name="programTabItem" Header="ПО">
                    <Grid Height="584" Margin="0,0,2,0">
                        <TextBlock HorizontalAlignment="Left" Margin="295,239,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top"/>
                        <DataGrid x:Name="appealProgramDataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,39,0,10" AutoGeneratedColumns="appealProgramDataGrid_AutoGeneratedColumns" HorizontalAlignment="Center" Width="1316">

                        </DataGrid>
                        <Button x:Name="appealProgramCreate" Style="{StaticResource ButtonMenuStyle}" Cursor="Hand" Margin="162,10,1018,555" Click="appealProgramCreate_Click">
                            <Button.Effect>
                                <DropShadowEffect/>
                            </Button.Effect>
                            <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Создать обращение"/>
                        </Button>
                        <Button x:Name="appealProgramView" Style="{StaticResource ButtonMenuStyle}" Cursor="Hand" Margin="10,10,1179,555" Click="appealProgramView_Click">
                            <Button.Effect>
                                <DropShadowEffect/>
                            </Button.Effect>
                            <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Открыть обращение"/>
                        </Button>
                        <TextBlock HorizontalAlignment="Left" Margin="465,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontFamily="Yu Gothic UI Semibold" Text="Инициатор:">
                            <TextBlock.Effect>
                                <DropShadowEffect/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBox x:Name="applicantTextBox" Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Left" Margin="537,8,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="203" Height="22" FontSize="14" FontFamily="Yu Gothic UI Semibold" TextChanged="applicantTextBox_TextChanged">
                            <TextBox.Effect>
                                <DropShadowEffect/>
                            </TextBox.Effect>
                        </TextBox>
                        <CheckBox x:Name="activityCheckBox" Content="Мои обращения" HorizontalAlignment="Left" Margin="1203,19,0,0" VerticalAlignment="Top" FontFamily="Yu Gothic UI Semibold" Foreground="White" IsChecked="True" Checked="activityCheckBox_Checked" Unchecked="activityCheckBox_Unchecked" IsEnabled="False"/>
                        <TextBox x:Name="searchIdAppeal" Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Left" Margin="394,8,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="52" Height="22" FontSize="14" FontFamily="Yu Gothic UI Semibold" TextChanged="searchIdAppeal_TextChanged">
                            <TextBox.Effect>
                                <DropShadowEffect/>
                            </TextBox.Effect>
                        </TextBox>
                        <TextBlock HorizontalAlignment="Left" Margin="348,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontFamily="Yu Gothic UI Semibold" Text="Номер:">
                            <TextBlock.Effect>
                                <DropShadowEffect/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <CheckBox x:Name="statusOitCheckBox" Content="Согласовано ОИТ" HorizontalAlignment="Left" Margin="1071,19,0,0" VerticalAlignment="Top" FontFamily="Yu Gothic UI Semibold" Foreground="White" IsChecked="False" Checked="statusOitCheckBox_Checked" Unchecked="statusOitCheckBox_Unchecked"/>
                        <CheckBox x:Name="statusOibCheckBox" Content="Согласовано ОИБ" HorizontalAlignment="Left" Margin="1071,0,0,0" VerticalAlignment="Top" FontFamily="Yu Gothic UI Semibold" Foreground="White" IsChecked="False" Unchecked="statusOibCheckBox_Unchecked" Checked="statusOibCheckBox_Checked"/>
                        <TextBlock HorizontalAlignment="Left" Margin="762,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontFamily="Yu Gothic UI Semibold" Text="Исполнитель:">
                            <TextBlock.Effect>
                                <DropShadowEffect/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBox x:Name="executeTextBox" Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Left" Margin="845,8,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="203" Height="22" FontSize="14" FontFamily="Yu Gothic UI Semibold" TextChanged="executeTextBox_TextChanged">
                            <TextBox.Effect>
                                <DropShadowEffect/>
                            </TextBox.Effect>
                        </TextBox>

                    </Grid>

                </TabItem>
                <TabItem x:Name="foldersTabItem" Header="Папки">
                    <Grid Height="584" Margin="0,0,2,0">
                        <TextBlock HorizontalAlignment="Left" Margin="295,239,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top"/>
                        <DataGrid x:Name="appealFolderDataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,39,0,10" HorizontalAlignment="Center" Width="1316" AutoGeneratedColumns="appealFolderDataGrid_AutoGeneratedColumns"/>
                        <Button x:Name="appealFolderCreate" Style="{StaticResource ButtonMenuStyle}" Cursor="Hand" Margin="162,10,1035,555" Click="appealFolderCreate_Click">
                            <Button.Effect>
                                <DropShadowEffect/>
                            </Button.Effect>
                            <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Создать обращение"/>
                        </Button>
                        <Button x:Name="appealFolderView" Style="{StaticResource ButtonMenuStyle}" Cursor="Hand" Margin="10,10,1179,555" Click="appealFolderView_Click">
                            <Button.Effect>
                                <DropShadowEffect/>
                            </Button.Effect>
                            <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Открыть обращение"/>
                        </Button>
                        <CheckBox x:Name="myAppealsFolder" Content="Мои обращения" HorizontalAlignment="Left" Margin="1203,19,0,0" VerticalAlignment="Top" FontFamily="Yu Gothic UI Semibold" Foreground="White" IsChecked="True" IsEnabled="False" Checked="myAppealsFolder_Checked" Unchecked="myAppealsFolder_Unchecked"/>
                        <TextBlock HorizontalAlignment="Left" Margin="317,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontFamily="Yu Gothic UI Semibold" Text="Инициатор:">
                            <TextBlock.Effect>
                                <DropShadowEffect/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBox x:Name="applicantFolderTextBlock" Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Left" Margin="389,8,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="203" Height="22" FontSize="14" FontFamily="Yu Gothic UI Semibold" TextChanged="applicantFolderTextBlock_TextChanged">
                            <TextBox.Effect>
                                <DropShadowEffect/>
                            </TextBox.Effect>
                        </TextBox>
                        <CheckBox x:Name="responsibleStatusFolder" Content="Согласовано" HorizontalAlignment="Left" Margin="1096,19,0,0" VerticalAlignment="Top" FontFamily="Yu Gothic UI Semibold" Foreground="White" IsChecked="True" Unchecked="responsibleStatusFolder_Unchecked" Checked="responsibleStatusFolder_Checked"/>

                    </Grid>

                </TabItem>
                <TabItem x:Name="PrintersTabItem" Header="Принтеры">
                    <Grid Height="584" Margin="0,0,2,0">
                        <TextBlock HorizontalAlignment="Left" Margin="295,239,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top"/>
                        <DataGrid x:Name="printerDataGrid" Margin="0,39,0,10" HorizontalAlignment="Center" Width="1316" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding id_appeal}" />
                                <DataGridTextColumn Header="ИНИЦИАТОР" Binding="{Binding applicant}"/>
                                <DataGridTextColumn Header="IP КОМПЬЮТЕРА" Binding="{Binding ip_pc}" />
                                <DataGridTextColumn Header="ИМЯ КОМПЬЮТЕРА" Binding="{Binding name_pc}" />
                                <DataGridTextColumn Header="МОДЕЛЬ ПРИНТЕРА" Binding="{Binding model_printer}" />
                                <DataGridTextColumn Header="IP ПРИНТЕРА" Binding="{Binding ip_printer}" />
                                <DataGridTextColumn Header="ИСПОЛНИТЕЛЬ" Binding="{Binding executor}" />
                                <DataGridTextColumn Header="СТАТУС ВЫПОЛНЕНИЯ" Binding="{Binding status_execute}" />
                                <DataGridTextColumn Header="КОММЕНТАРИЙ" Binding="{Binding comment}" Width="*" />

                            </DataGrid.Columns>
                        </DataGrid>
                        <Button x:Name="appealPrinterCreate" Style="{StaticResource ButtonMenuStyle}" Cursor="Hand" Margin="162,10,1035,555" Click="appealPrinterCreate_Click">
                            <Button.Effect>
                                <DropShadowEffect/>
                            </Button.Effect>
                            <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Создать обращение"/>
                        </Button>
                        <Button x:Name="printerAppealView" Style="{StaticResource ButtonMenuStyle}" Cursor="Hand" Margin="10,10,1179,555" Click="printerAppealView_Click">
                            <Button.Effect>
                                <DropShadowEffect/>
                            </Button.Effect>
                            <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Открыть обращение"/>
                        </Button>
                        <CheckBox Content="Мои обращения" HorizontalAlignment="Left" Margin="1203,19,0,0" VerticalAlignment="Top" FontFamily="Yu Gothic UI Semibold" Foreground="White" IsChecked="True" IsEnabled="False"/>

                    </Grid>

                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
