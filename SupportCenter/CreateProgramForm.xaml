<Window x:Class="SupportCenter.CreateProgramForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SupportCenter"
        mc:Ignorable="d"
        Title="CreateProgramForm" Height="213" Width="622">
    <Window.Resources>
        <ResourceDictionary Source="/Styles/Style.xaml"></ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Image Source="/Image/Main.jpg" StretchDirection="UpOnly" Stretch="Fill"/>
        <Grid Background="#EF3C3636" Opacity="1"  >
            <Grid>
                <TextBlock HorizontalAlignment="Left" Margin="33,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Foreground="White" FontFamily="Yu Gothic UI Semibold" Text="Наименование программы:">
                    <TextBlock.Effect>
                        <DropShadowEffect/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBox x:Name="nameProgram" Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Left" Margin="249,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="334" Height="23" FontSize="16" FontFamily="Yu Gothic UI Semibold">
                    <TextBox.Effect>
                        <DropShadowEffect/>
                    </TextBox.Effect>
                </TextBox>
                <TextBox x:Name="wayProgram" Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Left" Margin="33,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="550" Height="49" FontSize="16" FontFamily="Yu Gothic UI Semibold" Cursor="Hand">
                    <TextBox.Effect>
                        <DropShadowEffect/>
                    </TextBox.Effect>
                </TextBox>
                <TextBlock  HorizontalAlignment="Left" Margin="33,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Foreground="White" FontFamily="Yu Gothic UI Semibold" Text="Путь к программе:">
                    <TextBlock.Effect>
                        <DropShadowEffect/>
                    </TextBlock.Effect>
                </TextBlock>
                <Button x:Name="createProgramButton" Style="{StaticResource ButtonMenuStyle}"  Cursor="Hand" Margin="33,129,0,0" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="550" Click="createProgramButton_Click">
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                    <Grid>
                        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Добавить программу" VerticalAlignment="Center" FontSize="14"/>
                    </Grid>
                </Button>
            </Grid>

        </Grid>
    </Grid>
</Window>
