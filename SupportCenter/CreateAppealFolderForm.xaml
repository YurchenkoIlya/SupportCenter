<Window x:Class="SupportCenter.CreateAppealFolderForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SupportCenter"
        mc:Ignorable="d"
        Title="Создание обращения на предоставление доступа к папке" Height="287" Width="1049" Loaded="Window_Loaded">
    <Window.Resources>
        <ResourceDictionary Source="/Styles/Style.xaml"></ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Image Source="/Image/Main.jpg" StretchDirection="UpOnly" Stretch="Fill"/>
        <Grid Background="#EF3C3636" Opacity="1">
            <TextBlock Margin="197,10,0,552" TextWrapping="Wrap" FontSize="16" Foreground="White" FontFamily="Yu Gothic UI Semibold" Text="Создание обращения" HorizontalAlignment="Left" Width="167">
                <TextBlock.Effect>
                    <DropShadowEffect/>
                </TextBlock.Effect>
            </TextBlock>
            <Button x:Name="createAppealFolder" Style="{StaticResource ButtonMenuStyle}" HorizontalAlignment="Left" Margin="27,197,0,0" VerticalAlignment="Top" Height="26" Width="493" Cursor="Hand" Click="createAppealFolder_Click">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Создать"/>
            </Button>
            <TextBlock HorizontalAlignment="Left" Margin="30,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Foreground="White" FontFamily="Yu Gothic UI Semibold" Text="Требуемая сетевая папка:">
                <TextBlock.Effect>
                    <DropShadowEffect/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBox x:Name="folderAppeal" Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Left" Margin="30,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="325" Height="24" FontSize="16" FontFamily="Yu Gothic UI Semibold">
                <TextBox.Effect>
                    <DropShadowEffect/>
                </TextBox.Effect>
            </TextBox>
            <Button x:Name="selectFolder" Style="{StaticResource ButtonMenuStyle}" HorizontalAlignment="Left" Margin="364,59,0,0" VerticalAlignment="Top" Height="24" Width="156" Cursor="Hand" Click="selectFolder_Click">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Выбрать"/>
            </Button>
            <TextBox x:Name="commentAppeal" Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Left" Margin="27,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="493" Height="75" FontSize="16" FontFamily="Yu Gothic UI Semibold">
                <TextBox.Effect>
                    <DropShadowEffect/>
                </TextBox.Effect>
            </TextBox>
            <TextBlock HorizontalAlignment="Left" Margin="27,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Foreground="White" FontFamily="Yu Gothic UI Semibold" Text="Комментарий к обращению (обоснование, для чего требуется) : ">
                <TextBlock.Effect>
                    <DropShadowEffect/>
                </TextBlock.Effect>
            </TextBlock>
            <DataGrid x:Name="folderDataGrid"
 AutoGenerateColumns="False"
 SelectionMode="Single"
 SelectionUnit="FullRow" Margin="542,33,0,0" HorizontalAlignment="Left" Width="490" Height="156" VerticalAlignment="Top">
                <DataGrid.Columns>
                    <DataGridTextColumn
         Header="НАИМЕНОВАНИЕ ПАПКИ"
         Binding="{Binding nameFolder}"
         Width="*" />
                    <DataGridTextColumn
Header="ПУТЬ К ПАПКЕ"
Binding="{Binding wayFolder}"
Width="*" />
                </DataGrid.Columns>



            </DataGrid>
            <Button x:Name="selectаFolderDg" Style="{StaticResource ButtonMenuStyle}" HorizontalAlignment="Left" Margin="542,197,0,0" VerticalAlignment="Top" Height="26" Width="491" Cursor="Hand" Click="selectаFolderDg_Click">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Выбрать"/>
            </Button>
        </Grid>

    </Grid>
</Window>
